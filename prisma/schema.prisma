generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  username  String   @unique
  email     String   @unique
  country   String
  phone     String   @unique
  passwordHash String
  diamond   Int      @default(0)
  dk        Int      @default(0)
  coin      Int      @default(0)
  lora      Int      @default(0)
  tk        Int      @default(0)
  isLoggedIn Boolean @default(false)
  isBlocked Boolean  @default(false)
  role      String   @default("USER") // "USER", "ADMIN", "SUPER_ADMIN"
  createdAt DateTime @default(now())
  
  currentAvatar String?
  currentBanner String?
  bio           String?
  website       String?
  social        String?
  
  tasks     Task[]
  notifications Notification[]
  items     UserItem[]
  promotedLinks PromotedLink[]
  linkSubmissions LinkSubmission[]
  topUpRequests TopUpRequest[]
  supportSessions SupportSession[]

  guildId       Int?
  guild         Guild?   @relation(fields: [guildId], references: [id])
  ownedGuild    Guild?   @relation("GuildLeader")
}



model Guild {
  id              Int      @id @default(autoincrement())
  name            String
  username        String   @unique
  description     String?
  type            String   @default("USER") // USER, YOUTUBER
  leaderId        Int      @unique
  leader          User     @relation("GuildLeader", fields: [leaderId], references: [id])
  status          String   @default("APPROVED") // PENDING, APPROVED, REJECTED
  memberLimit     Int      @default(50)
  commissionRate  Float    @default(1.0)
  
  // YouTuber Specific
  youtubeChannelLink String?
  videoLink          String?
  contactEmail       String?
  contactPhone       String?
  verificationContact String?

  createdAt       DateTime @default(now())
  members         User[]
}

model StoreItem {
  id          Int      @id @default(autoincrement())
  name        String
  type        String   // "avatar", "banner"
  price       Int
  currency    String   // "free", "dk", "tk"
  imageUrl    String
  createdAt   DateTime @default(now())
  users       UserItem[]
}

model UserItem {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  itemId      Int
  item        StoreItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  purchasedAt DateTime @default(now())
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  reward    Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  message   String
  type      String   @default("info") // info, credit, debit, alert
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Admin {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         String   @default("admin") // "SUPER_ADMIN", "ADMIN"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model PromotedLink {
  id              Int      @id @default(autoincrement())
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
  title           String
  url             String
  targetVisits    Int
  completedVisits Int      @default(0)
  status          String   @default("ACTIVE") // ACTIVE, COMPLETED, BLOCKED
  createdAt       DateTime @default(now())
  submissions     LinkSubmission[]
}

model TopUpPackage {
  id           Int           @id @default(autoincrement())
  name         String
  price        Int
  diamondAmount Int
  currency     String        @default("BDT")
  countries    String
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  requests     TopUpRequest[]
}

model TopUpWallet {
  id          Int           @id @default(autoincrement())
  name        String
  adminNumber String
  instruction String
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  requests    TopUpRequest[]
}

model TopUpRequest {
  id           Int          @id @default(autoincrement())
  userId       Int
  user         User         @relation(fields: [userId], references: [id])
  packageId    Int
  package      TopUpPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)
  walletId     Int
  wallet       TopUpWallet  @relation(fields: [walletId], references: [id], onDelete: Cascade)
  senderNumber String
  trxId        String       @unique
  status       String       @default("PENDING")
  createdAt    DateTime     @default(now())
  processedAt  DateTime?
}

model LinkSubmission {
  id             Int          @id @default(autoincrement())
  promotedLinkId Int
  promotedLink   PromotedLink @relation(fields: [promotedLinkId], references: [id], onDelete: Cascade)
  visitorId      Int?
  visitor        User?        @relation(fields: [visitorId], references: [id])
  screenshots    String[]
  status         String       @default("PENDING") // PENDING, APPROVED, REJECTED, REPORTED
  rejectionReason String?
  reportMessage   String?
  reportedAt      DateTime?
  submittedAt     DateTime     @default(now())
}

model SystemSetting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model AppConfig {
  id          Int     @id @default(autoincrement())
  key         String  @unique
  value       String
  description String?
}

model SupportSession {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  status    String   @default("AI_MODE") // AI_MODE, LIVE_CHAT, RESOLVED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messages  ChatMessage[]
}

model ChatMessage {
  id        Int      @id @default(autoincrement())
  sessionId Int
  session   SupportSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sender    String   // "user", "ai", "admin"
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model SMSLog {
  id        Int      @id @default(autoincrement())
  sender    String
  message   String
  trxId     String?
  status    String   @default("RECEIVED")
  createdAt DateTime @default(now())
}
