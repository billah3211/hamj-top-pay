generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  username  String   @unique
  email     String   @unique
  country   String
  phone     String   @unique
  passwordHash String
  diamond   Int      @default(0)
  dk        Int      @default(0)
  coin      Int      @default(0)
  lora      Int      @default(0)
  tk        Int      @default(0)
  isLoggedIn Boolean @default(false)
  isBlocked Boolean  @default(false)
  role      String   @default("USER") // "USER", "ADMIN", "SUPER_ADMIN"
  createdAt DateTime @default(now())
  
  currentAvatar String?
  currentBanner String?
  
  tasks     Task[]
  notifications Notification[]
  items     UserItem[]
}

model StoreItem {
  id          Int      @id @default(autoincrement())
  name        String
  type        String   // "avatar", "banner"
  price       Int
  currency    String   // "free", "dk", "tk"
  imageUrl    String
  createdAt   DateTime @default(now())
  users       UserItem[]
}

model UserItem {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  itemId      Int
  item        StoreItem @relation(fields: [itemId], references: [id])
  purchasedAt DateTime @default(now())
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  reward    Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  message   String
  type      String   @default("info") // info, credit, debit, alert
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Admin {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         String   @default("admin") // "SUPER_ADMIN", "ADMIN"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
